            steps{
                sh "mvn clean package"
            }
        }
        stage('codequalityanalysis'){

            steps{
                sh "mvn sonar:sonar"
            }
        }
        stage('uploadnexus'){
            steps{
                sh "mvn deploy "

                
            }
        }
